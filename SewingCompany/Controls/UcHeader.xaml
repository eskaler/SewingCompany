             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SewingCompany.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800"
             Background="{StaticResource bMain1}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".2*"/>
            <ColumnDefinition Width=".6*"/>
            <ColumnDefinition Width=".2*"/>
        </Grid.ColumnDefinitions>
        <Image Source="./../Resources/Images/Logo/logo-02.jpg"/>
        <Label Grid.Column="1" Name="LbPageName" FontSize="30pt" Content="Test" Foreground="White" VerticalContentAlignment="Center" />
        <Button Grid.Column="2" Name="BtnExit" Content="Выход" Click="BtnExit_Click" Height="40"/>
    </Grid>
</UserControl>
