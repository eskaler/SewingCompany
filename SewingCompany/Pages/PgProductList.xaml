<Page x:Class="SewingCompany.Pages.PgProductList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SewingCompany.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PgProductList">

    <Grid>
        <DataGrid Name="DgProductList" AutoGenerateColumns="False" AlternationCount="2">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Артикул"/>
                <DataGridTextColumn Binding="{Binding Name}" Header="название"/>
                <DataGridTextColumn Binding="{Binding Width}" Header="Ширина"/>
                <DataGridTextColumn Binding="{Binding Unit.Name}" Header="ед."/>
                <DataGridTextColumn Binding="{Binding Height}" Header="Длина"/>
                <DataGridTextColumn Binding="{Binding Unit1.Name}" Header="ед."/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
